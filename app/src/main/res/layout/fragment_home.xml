<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/home"
    android:background="@color/black"
    tools:context=".ui.home.HomeFragment">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:id="@+id/singleElement">

            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingStart="15dp"
                android:paddingTop="30dp"
                android:id="@+id/mainFrame">

<!--             text-->
                <androidx.appcompat.widget.LinearLayoutCompat
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:id="@+id/layout_text">

                    <androidx.appcompat.widget.AppCompatTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/baloobhai_regular"
                        android:text="welcome to The"
                        android:textColor="@color/lightgrey"
                        android:textSize="@dimen/_30sdp" />

                    <androidx.appcompat.widget.LinearLayoutCompat
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <androidx.appcompat.widget.AppCompatTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/baloobhai_regular"
                            android:text="Healing"
                            android:textColor="@color/white"
                            android:textSize="@dimen/_50sdp" />

                        <androidx.appcompat.widget.AppCompatTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:fontFamily="@font/baloobhai_regular"
                            android:text="Radio"
                            android:textColor="@color/white"
                            android:textSize="@dimen/_40sdp" />

                    </androidx.appcompat.widget.LinearLayoutCompat>

                </androidx.appcompat.widget.LinearLayoutCompat>

<!--             SearchBar and Radio-->
                <androidx.appcompat.widget.LinearLayoutCompat
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:layout_marginEnd="@dimen/_10sdp"
                    android:orientation="horizontal"
                    android:id="@+id/searchAndRadio">

                    <EditText
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/_45sdp"
                        android:layout_marginEnd="10dp"
                        android:layout_weight="1"
                        android:textColor="@color/white"
                        android:background="@drawable/ractangle_stroke"
                        android:drawableStart="@drawable/search"
                        android:drawablePadding="@dimen/_10sdp"
                        android:hint="Search..."
                        android:textCursorDrawable="@drawable/cursor"
                        android:padding="@dimen/_10sdp"
                        android:textColorHint="@color/lightgrey" />

                    <ImageView
                        android:layout_width="@dimen/_45sdp"
                        android:layout_height="@dimen/_45sdp"
                        android:layout_marginLeft="-10dp"
                        android:layout_marginEnd="8dp"
                        android:id="@+id/liveRadio"
                        android:background="@drawable/ractangle_blue"
                        android:padding="@dimen/_10sdp"
                        android:src="@drawable/radio"
                        app:tint="@color/white" />


                </androidx.appcompat.widget.LinearLayoutCompat>

<!--            Quote of the day-->
                <androidx.appcompat.widget.LinearLayoutCompat
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_20sdp"
                    android:layout_marginEnd="@dimen/_10sdp"
                    android:orientation="vertical">

                    <com.google.android.material.textview.MaterialTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="Quote of the Day"
                        android:textColor="@color/white"
                        android:textSize="@dimen/_15sdp"/>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:layout_marginBottom="@dimen/_5sdp">


                        <com.google.android.material.textview.MaterialTextView
                            android:id="@+id/quote"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:fontFamily="@font/playball_regular"
                            android:padding="@dimen/_15sdp"
                            android:text="@string/thought"
                            android:textColor="@color/white"
                            android:textSize="@dimen/_17sdp" />

                        <TextView
                            android:id="@+id/quoter"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentTop="true"
                            android:layout_alignParentEnd="true"
                            android:layout_alignParentBottom="true"
                            android:layout_marginTop="110dp"
                            android:layout_marginEnd="10dp"
                            android:layout_marginBottom="20dp"
                            android:fontFamily="@font/playball_regular"
                            android:padding="@dimen/_5sdp"
                            android:text="- George Bernhard Shaw"
                            android:textColor="@color/white"
                            android:textSize="@dimen/_15sdp" />


                    </RelativeLayout>


                </androidx.appcompat.widget.LinearLayoutCompat>

<!--             Healing Blogs-->
                <androidx.appcompat.widget.LinearLayoutCompat
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginTop="@dimen/_15sdp">

                    <androidx.appcompat.widget.LinearLayoutCompat
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <com.google.android.material.textview.MaterialTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Healing Blogs"
                            android:textColor="@color/white"
                            android:textSize="@dimen/_15sdp"
                            android:padding="@dimen/_5sdp"/>


                        <androidx.recyclerview.widget.RecyclerView
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_170sdp"
                            android:id="@+id/healingBlogs"
                            android:layout_marginTop="@dimen/_4sdp"/>

                    </androidx.appcompat.widget.LinearLayoutCompat>

                     </androidx.appcompat.widget.LinearLayoutCompat>

<!--            Today's Trending-->
                <androidx.appcompat.widget.LinearLayoutCompat
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginTop="@dimen/_15sdp">

                    <androidx.appcompat.widget.LinearLayoutCompat
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <com.google.android.material.textview.MaterialTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Today's Trending"
                            android:textColor="@color/white"
                            android:textSize="@dimen/_15sdp"
                            android:padding="@dimen/_5sdp"/>


                        <androidx.recyclerview.widget.RecyclerView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/todaysTrending"
                            android:nestedScrollingEnabled="false"
                            android:layout_marginTop="@dimen/_4sdp"/>

                    </androidx.appcompat.widget.LinearLayoutCompat>

                </androidx.appcompat.widget.LinearLayoutCompat>

<!--            Healing Images-->
                <androidx.appcompat.widget.LinearLayoutCompat
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginTop="@dimen/_15sdp">

                    <androidx.appcompat.widget.LinearLayoutCompat
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <com.google.android.material.textview.MaterialTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Healing Images"
                            android:textColor="@color/white"
                            android:textSize="@dimen/_15sdp"
                            android:padding="@dimen/_5sdp"/>

                        <androidx.recyclerview.widget.RecyclerView
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_170sdp"
                            android:id="@+id/healingImages"
                            android:layout_marginTop="@dimen/_4sdp"/>

                    </androidx.appcompat.widget.LinearLayoutCompat>

                </androidx.appcompat.widget.LinearLayoutCompat>

<!--            Healing Sessions-->
                <androidx.appcompat.widget.LinearLayoutCompat
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginTop="@dimen/_15sdp">

                    <androidx.appcompat.widget.LinearLayoutCompat
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <com.google.android.material.textview.MaterialTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Healing Sessions"
                            android:textColor="@color/white"
                            android:textSize="@dimen/_15sdp"
                            android:padding="@dimen/_5sdp"/>

                        <androidx.recyclerview.widget.RecyclerView
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_170sdp"
                            android:id="@+id/healingSessions"
                            android:layout_marginTop="@dimen/_4sdp"/>

                    </androidx.appcompat.widget.LinearLayoutCompat>

                </androidx.appcompat.widget.LinearLayoutCompat>

            </androidx.appcompat.widget.LinearLayoutCompat>


        </androidx.appcompat.widget.LinearLayoutCompat>


    </androidx.core.widget.NestedScrollView>

</FrameLayout>