<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/_130sdp"
    android:layout_height="@dimen/_130sdp"
    android:orientation="vertical"
    android:layout_marginTop="@dimen/_10sdp"
    android:layout_marginStart="@dimen/_10sdp"
    android:id="@+id/sessionPlay"
    android:background="@drawable/ractangle_stroke"
    android:backgroundTint="@color/darkgrey"
    android:padding="@dimen/_10sdp">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="@dimen/_60sdp"
        android:src="@drawable/session_image"
        android:scaleType="centerCrop"
        android:id="@+id/session_image"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/session_title"
        android:textColor="@color/white"
        android:text="Title"
        android:textSize="@dimen/_14sdp"
        android:fontFamily="@font/baloobhai_regular"
        android:layout_marginTop="@dimen/_5sdp"/>

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="@dimen/_5sdp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/session_date"
            android:textColor="@color/lightgrey"
            android:text="date"
            android:fontFamily="@font/baloobhai_regular" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/session_time"
            android:textColor="@color/lightgrey"
            android:text="Time"
            android:fontFamily="@font/baloobhai_regular"
            android:layout_marginStart="@dimen/_10sdp"/>




    </androidx.appcompat.widget.LinearLayoutCompat>


</androidx.appcompat.widget.LinearLayoutCompat>